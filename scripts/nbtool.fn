# Sleep and cell will be excluded
function NB_WAIT {
    sleep $1;
    return 0
}

function NB_WAIT_CMD {
    #set -x
    echo $* >/tmp/WAIT_CMD
    
    while ! eval "$*" >>/tmp/WAIT_CMD 2>&1; do
        #echo looping ...
        sleep 1
    done
    return 0
}

# NOTE: use as
#  ...  { __RETURN 1; return 1; }
function __RETURN {
    local RET="$1"
    [ -z "$RET"    ] && return 0
    [ "$RET" = "0" ] && return 0
    NB_DEBUG "return $RET"
    return $RET
}

