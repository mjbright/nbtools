function NB_ARCHIVE_LAB {
    # e.g.  NB_ARCHIVE_LAB lab1
    LAB=$1; shift
    
    mkdir -p ~/labs.old
    [ -d ~/labs/$LAB ] && {
        # echo "-- mv ~/labs/$LAB ~/labs.old/"
        [ -d ~/labs.old/$LAB ] && {
            mv ~/labs.old/$LAB ~/labs.old/{$LAB}.2
        }
        mv ~/labs/$LAB ~/labs.old/
        # USELESS - but paranoid:
        [ -d ~/labs/$LAB ] && rm -rf ~/labs/$LAB/* ~/labs/$LAB/.terraform.lock.hcl
    } >/dev/null 2>&1
}

