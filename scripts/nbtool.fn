            TITLE_MODE="REGO"
            NB_SET_VAR TOOL="opa"
            ;;

        *)
            echo "Error: Unknown LAB_MODE '$LAB_MODE' - should be one of 'Ansible|Docker|Terraform|Tofu|Kubernetes|Rego'" | NB_HIGHLIGHT
            banner ERR
            return
            ;;
    esac

    #rm -rf ~/labs
